# Database configuration
DATABASE_HOST={{ terraform_output.db_endpoint.value | split(':') | first }}
DATABASE_PORT={{ terraform_output.db_endpoint.value | split(':') | last | default('5432') }}
DATABASE_NAME={{ db_name }}
DATABASE_USER={{ db_user }}
DATABASE_PASSWORD={{ db_password }}

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY={{ vault_secret_key | default('change-me-in-production') }}

# Application settings
PORT=5000